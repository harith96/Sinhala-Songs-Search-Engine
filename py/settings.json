{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "names-analyser-si": {
          "type": "custom",
          "tokenizer": "icu_tokenizer",
          "char_filter": ["punctuation_char_filter"],
          "filter": ["edge_n_gram_filter"]
        },
        "lyrics-analyser-si": {
          "type": "custom",
          "tokenizer": "icu_tokenizer"
        },
        "english-analyzer": {
          "type": "custom",
          "tokenizer": "classic",
          "char_filter": ["punctuation_char_filter"],
          "filter": ["edge_n_gram_filter"]
        },
        "names-search-analyser-si": {
          "type": "custom",
          "tokenizer": "icu_tokenizer",
          "char_filter": ["punctuation_char_filter"]
        },
        "english-search-analyzer": {
          "type": "custom",
          "tokenizer": "classic",
          "char_filter": ["punctuation_char_filter"]
        }
      },
      "char_filter": {
        "punctuation_char_filter": {
          "type": "mapping",
          "mappings": [".=>", "|=>", "-=>", "_=>", "'=>", "/=>", ",=> "]
        }
      },
      "filter": {
        "edge_n_gram_filter": {
          "type": "edge_ngram",
          "min_gram": "2",
          "max_gram": "10"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "song_id": {
        "type": "integer"
      },
      "titile_en": {
        "type": "search_as_you_type",
        "analyzer": "english-analyzer",
        "search_analyzer": "english-search-analyzer"
      },
      "title_si": {
        "type": "search_as_you_type",
        "analyzer": "names-analyser-si",
        "search_analyzer": "names-search-analyser-si"
      },
      "artist": {
        "type": "search_as_you_type",
        "analyzer": "english-analyzer",
        "search_analyzer": "english-search-analyzer"
      },
      "artist_si": {
        "type": "search_as_you_type",
        "analyzer": "names-analyser-si",
        "search_analyzer": "names-search-analyser-si"
      },
      "genre": {
        "type": "search_as_you_type",
        "analyzer": "english-analyzer",
        "search_analyzer": "english-search-analyzer"
      },
      "genre_si": {
        "type": "search_as_you_type",
        "analyzer": "names-analyser-si",
        "search_analyzer": "names-search-analyser-si"
      },
      "writer": {
        "type": "search_as_you_type",
        "analyzer": "english-analyzer",
        "search_analyzer": "english-search-analyzer"
      },
      "composer": {
        "type": "search_as_you_type",
        "analyzer": "english-analyzer",
        "search_analyzer": "english-search-analyzer"
      },
      "composer_si": {
        "type": "search_as_you_type",
        "analyzer": "names-analyser-si",
        "search_analyzer": "names-search-analyser-si"
      },
      "rating": {
        "type": "integer",
        "index": false
      },
      "lyrics": {
        "type": "search_as_you_type",
        "analyzer": "lyrics-analyser-si"
      }
    }
  }
}
